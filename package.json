    "better-sqlite3": "^11.6.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "qrcode": "^1.5.3",
    "viem": "^2.21.45"
  },
  "devDependencies": {
    "esbuild": "^0.27.2"
  }
